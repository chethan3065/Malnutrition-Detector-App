<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F7FA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Modern Header with Gradient -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            android:padding="24dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_health"
                    android:contentDescription="Health Icon"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malnutrition Detector"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI-Powered Child Health Assessment"
                    android:textSize="12sp"
                    android:textColor="#E0FFFFFF"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Section: Upload Image -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Child's Photo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:drawableStart="@drawable/ic_camera"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>

                <!-- Image Preview Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#F1F5F9">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Image View -->
                        <ImageView
                            android:id="@+id/imagePreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:background="#F1F5F9"
                            android:contentDescription="Child Photo"/>


                        <!-- Placeholder overlay (will be hidden when image is loaded) -->
                        <LinearLayout
                            android:id="@+id/placeholderLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#F1F5F9">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_add_photo"
                                app:tint="#94A3B8"
                                android:contentDescription="Add Photo"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap button below to add photo"
                                android:textSize="14sp"
                                android:textColor="#64748B"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <!-- Action Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCapture"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="56dp"
                        android:layout_marginEnd="6dp"
                        android:text="Camera"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_camera_white"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#3B82F6"
                        android:textColor="#FFFFFF"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelect"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="56dp"
                        android:layout_marginStart="6dp"
                        android:text="Gallery"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_gallery"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#10B981"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:background="#E2E8F0"/>

                <!-- Section: Anthropometric Data -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Child's Information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:drawableStart="@drawable/ic_form"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"/>

                <!-- Input Fields with Icons -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Height (cm)"
                    app:startIconDrawable="@drawable/ic_height"
                    app:startIconTint="#64748B"
                    app:boxStrokeColor="#3B82F6"
                    app:hintTextColor="#3B82F6"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Weight (kg)"
                    app:startIconDrawable="@drawable/ic_weight"
                    app:startIconTint="#64748B"
                    app:boxStrokeColor="#3B82F6"
                    app:hintTextColor="#3B82F6"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Age (months)"
                    app:startIconDrawable="@drawable/ic_baby"
                    app:startIconTint="#64748B"
                    app:boxStrokeColor="#3B82F6"
                    app:hintTextColor="#3B82F6"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:progressTint="#3B82F6"/>

                <!-- Analyze Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPredict"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Analyze Child's Health"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_analyze"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#8B5CF6"
                    android:textColor="#FFFFFF"
                    app:elevation="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Results Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/resultsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assessment Results"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:drawableStart="@drawable/ic_results"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Result will appear here"
                    android:textSize="15sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="#475569"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info"
                app:tint="#94A3B8"
                android:contentDescription="Info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by AI â€¢ For screening purposes only"
                android:textSize="12sp"
                android:textColor="#94A3B8"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>